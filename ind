            initEventListeners();
            loadCategory('Sports');
            
            setTimeout(() => {
                document.getElementById('loader').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('loader').style.display = 'none';
                }, 500);
            }, 1000);
        });

        // --- Theme Management ---
        function initTheme() {
            const savedTheme = localStorage.getItem('prolivetv_theme') || 'dark';
            const isLightTheme = savedTheme === 'light';
            
            if (isLightTheme) {
                document.body.classList.add('light-theme');
                document.getElementById('themeText').textContent = 'وضع الليل';
                document.getElementById('themeIcon').className = 'fas fa-moon';
            }
        }

        function toggleTheme() {
            const isLightTheme = document.body.classList.toggle('light-theme');
            const themeIcon = document.getElementById('themeIcon');
            const themeText = document.getElementById('themeText');
            
            if (isLightTheme) {
                themeIcon.className = 'fas fa-moon';
                themeText.textContent = 'وضع الليل';
                localStorage.setItem('prolivetv_theme', 'light');
            } else {
                themeIcon.className = 'fas fa-sun';
                themeText.textContent = 'وضع النهار';
                localStorage.setItem('prolivetv_theme', 'dark');
            }
        }

        // --- Event Listeners ---
        function initEventListeners() {
            const searchInput = document.getElementById('searchInput');
            const searchClear = document.getElementById('searchClear');
            const searchBtn = document.getElementById('searchBtn');
            
            searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    performSearch();
                }
            });
            
            searchInput.addEventListener('input', (e) => {
                currentSearch = e.target.value.toLowerCase();
                searchClear.style.display = currentSearch ? 'block' : 'none';
                
                // For live and vod modes, filter immediately
                if (currentMode === 'live') {
                    filterChannels();
                } else if (currentMode === 'vod') {
                    filterVODs();
                }
            });
            
            searchClear.addEventListener('click', () => {
                searchInput.value = '';
                currentSearch = '';
                searchClear.style.display = 'none';
                
                if (currentMode === 'live') {
                    filterChannels();
                } else if (currentMode === 'vod') {
                    filterVODs();
                } else {
                    clearSearch();
                }
            });
        }

        // --- Sidebar Management ---
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const menuIcon = document.getElementById('menuIcon');
            
            isSidebarOpen = !isSidebarOpen;
            
            if (isSidebarOpen) {
                sidebar.classList.add('active');
                overlay.style.display = 'block';
                setTimeout(() => overlay.classList.add('active'), 10);
                menuIcon.className = 'fas fa-times';
            } else {
                closeSidebar();
            }
        }

        function closeSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const menuIcon = document.getElementById('menuIcon');
            
            isSidebarOpen = false;
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
            menuIcon.className = 'fas fa-bars';
            
            setTimeout(() => {
                if (!isSidebarOpen) {
                    overlay.style.display = 'none';
                }
            }, 300);
        }

        // --- Mode Management ---
        function switchMode(mode) {
            currentMode = mode;
            currentPage = 1;
            isSearchActive = false;
            searchQuery = '';
            
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            event.target.classList.add('active');
            
            const searchBtn = document.getElementById('searchBtn');
            
            if (mode === 'live') {
                document.getElementById('modeBadge').innerHTML = '<i class="fas fa-circle"></i> LIVE';
                document.getElementById('sectionTitle').textContent = getCategoryTitle(currentCategory);
                document.getElementById('filterButtons').style.display = 'flex';
                document.getElementById('videoWrapper').style.display = 'block';
                document.getElementById('currentInfo').style.display = 'flex';
                document.getElementById('categoryButtons').style.display = 'flex';
                document.getElementById('typeButtons').style.display = 'none';
                document.getElementById('tmdbCategoryButtons').style.display = 'none';
                document.getElementById('pagination').style.display = 'none';
                document.getElementById('searchInfo').style.display = 'none';
                searchBtn.style.display = 'none';
                
                document.getElementById('searchInput').placeholder = 'ابحث عن قناة...';
                
                renderCategoryButtons();
                filterChannels();
                
            } else if (mode === 'vod') {
                document.getElementById('modeBadge').innerHTML = '<i class="fas fa-video"></i> VOD';
                document.getElementById('sectionTitle').textContent = 'قوائم VOD';
                document.getElementById('filterButtons').style.display = 'none';
                document.getElementById('videoWrapper').style.display = 'none';
                document.getElementById('currentInfo').style.display = 'none';
                document.getElementById('categoryButtons').style.display = 'none';
                document.getElementById('typeButtons').style.display = 'none';
                document.getElementById('tmdbCategoryButtons').style.display = 'none';
                document.getElementById('pagination').style.display = 'none';
                document.getElementById('searchInfo').style.display = 'none';
                searchBtn.style.display = 'none';
                
                document.getElementById('searchInput').placeholder = 'ابحث عن فيديو...';
                
                loadVODContent();
                
            } else if (mode === 'tmdb') {
                document.getElementById('modeBadge').innerHTML = '<i class="fas fa-film"></i> TMDB';
                document.getElementById('sectionTitle').textContent = 'أفلام TMDB';
                document.getElementById('filterButtons').style.display = 'none';
                document.getElementById('videoWrapper').style.display = 'none';
                document.getElementById('currentInfo').style.display = 'none';
                document.getElementById('categoryButtons').style.display = 'none';
                document.getElementById('typeButtons').style.display = 'flex';
                document.getElementById('tmdbCategoryButtons').style.display = 'flex';
                document.getElementById('pagination').style.display = 'flex';
                document.getElementById('searchInfo').style.display = 'none';
                searchBtn.style.display = 'flex';
                
                document.getElementById('searchInput').placeholder = 'ابحث عن فيلم أو مسلسل...';
                
                loadTMDBContent();
                
            } else if (mode === 'youtube') {
                document.getElementById('modeBadge').innerHTML = '<i class="fab fa-youtube"></i> YouTube';
                document.getElementById('sectionTitle').textContent = 'YouTube - الأكثر رواجاً';
                document.getElementById('filterButtons').style.display = 'none';
                document.getElementById('videoWrapper').style.display = 'none';
                document.getElementById('currentInfo').style.display = 'none';
                document.getElementById('categoryButtons').style.display = 'none';
                document.getElementById('typeButtons').style.display = 'none';
                document.getElementById('tmdbCategoryButtons').style.display = 'flex';
                document.getElementById('pagination').style.display = 'flex';
                document.getElementById('searchInfo').style.display = 'none';
                searchBtn.style.display = 'flex';
                
                document.getElementById('searchInput').placeholder = 'ابحث في YouTube...';
                
                loadYouTubeContent();
            }
            
            document.getElementById('searchInput').value = '';
            currentSearch = '';
            document.getElementById('searchClear').style.display = 'none';
            
            if (window.innerWidth <= 900) {
                closeSidebar();
            }
        }

        // --- Player Management ---
        function initPlayer() {
            const video = document.getElementById('player');

            if (Hls.isSupported()) {
                hls = new Hls({
                    enableWorker: true,
                    lowLatencyMode: true,
                    backBufferLength: 90
                });
                
                hls.attachMedia(video);
            }

            player = new Plyr(video, {
                controls: [
                    'play-large', 'play', 'progress', 'current-time', 
                    'mute', 'volume', 'captions', 'settings', 'pip', 
                    'airplay', 'fullscreen'
                ],
                settings: ['quality', 'speed'],
                i18n: { 
                    restart: 'إعادة', 
                    play: 'تشغيل', 
                    pause: 'إيقاف', 
                    quality: 'الجودة',
                    speed: 'السرعة'
                }
            });
        }

        // --- Live TV Management ---
        async function loadCategory(catName) {
            currentCategory = catName;
            document.getElementById('sectionTitle').textContent = getCategoryTitle(catName);
            showLoadingState('جاري تحميل القنوات...');
            
            try {
                const response = await fetch(API_BASE + CATEGORIES_MAP[catName]);
                if (!response.ok) throw new Error('فشل التحميل');
                
                const data = await response.text();
                allChannels = parseM3U(data, catName);
                filterChannels();
            } catch (err) {
                console.error('Error loading category:', err);
                showErrorState('حدث خطأ في تحميل القنوات');
                allChannels = getSampleChannels(catName);
                filterChannels();
            }
        }

        function getCategoryTitle(catName) {
            const titles = {
                'Sports': 'القنوات الرياضية',
                'News': 'قنوات الأخبار',
                'Movies': 'قنوات الأفلام',
                'Kids': 'قنوات الأطفال',
                'Documentary': 'القنوات الوثائقية',
                'Entertainment': 'قنوات الترفيه',
                'Music': 'قنوات الموسيقى',
                'Educational': 'القنوات التعليمية',
                'Regional': 'القنوات المحلية'
            };
            return titles[catName] || catName;
        }

        function renderCategoryButtons() {
            const container = document.getElementById('categoryButtons');
            container.innerHTML = '';
            
            Object.keys(CATEGORIES_MAP).forEach(cat => {
                const isActive = cat === currentCategory;
                container.innerHTML += `
                    <button class="category-btn ${isActive ? 'active' : ''}" onclick="loadCategory('${cat}')">
                        ${getCategoryTitle(cat)}
                    </button>
                `;
            });
        }

        function parseM3U(content, category) {
            const lines = content.split('\n');
            const channels = [];
            let currentChannel = {};

            lines.forEach(line => {
                line = line.trim();
                
                if (line.startsWith('#EXTINF:')) {
                    const logoMatch = line.match(/tvg-logo="([^"]*)"/);
                    const nameParts = line.split(',');
                    const name = nameParts[nameParts.length - 1]
                        .replace(/\|.*$/, '')
                        .trim();
                    
                    const qualityMatch = line.match(/(HD|FHD|4K|UHD|SD)/i);
                    const quality = qualityMatch ? qualityMatch[0].toUpperCase() : 'SD';
                    const isLive = line.toLowerCase().includes('live');
                    
                    currentChannel = {
                        name,
                        logo: logoMatch ? logoMatch[1] : 'https://cdn-icons-png.flaticon.com/512/2718/2718224.png',
                        quality,
                        isLive,
                        category,
                        isFavorite: false,
                        type: 'live'
                    };
                } else if (line.startsWith('http')) {
                    currentChannel.url = line;
                    currentChannel.id = btoa(line).substring(0, 32);
                    currentChannel.isFavorite = favorites.some(f => f.id === currentChannel.id);
                    channels.push({ ...currentChannel });
                    currentChannel = {};
                }
            });
            
            return channels;
        }

        function getSampleChannels(category) {
            const sampleLogos = [
                'https://cdn-icons-png.flaticon.com/512/2718/2718224.png',
                'https://cdn-icons-png.flaticon.com/512/2503/2503442.png',
                'https://cdn-icons-png.flaticon.com/512/2503/2503485.png',
                'https://cdn-icons-png.flaticon.com/512/2503/2503461.png'
            ];
            
            const channels = [];
            for (let i = 1; i <= 20; i++) {
                channels.push({
                    id: `sample-${category}-${i}`,
                    name: `قناة ${category} ${i}`,
                    logo: sampleLogos[i % sampleLogos.length],
                    quality: i % 3 === 0 ? 'HD' : i % 3 === 1 ? 'FHD' : 'SD',
                    isLive: true,
                    category: category,
                    url: `https://example.com/stream${i}.m3u8`,
                    isFavorite: false,
                    type: 'live'
                });
            }
            return channels;
        }

        function filterChannels() {
            filteredChannels = [...allChannels];
            
            if (currentSearch) {
                filteredChannels = filteredChannels.filter(ch => 
                    ch.name.toLowerCase().includes(currentSearch)
                );
            }
            
            if (currentFilter === 'hd') {
                filteredChannels = filteredChannels.filter(ch => 
                    ch.quality === 'HD' || ch.quality === 'FHD' || ch.quality === '4K'
                );
            } else if (currentFilter === 'fhd') {
                filteredChannels = filteredChannels.filter(ch => ch.quality === 'FHD');
            } else if (currentFilter === 'live') {
                filteredChannels = filteredChannels.filter(ch => ch.isLive);
            }
            
            renderChannels();
        }

        function applyFilter(filter) {
            currentFilter = filter;
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            filterChannels();
        }

        function renderChannels() {
            const contentGrid = document.getElementById('contentGrid');
            contentGrid.innerHTML = '<div class="channel-grid" id="grid"></div>';
            const grid = document.getElementById('grid');
            
            if (filteredChannels.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-search"></i>
                        <p>لا توجد قنوات تطابق البحث</p>
                    </div>
                `;
                return;
            }
            
            const displayChannels = filteredChannels.slice(0, 100);
            
            displayChannels.forEach(channel => {
                const card = document.createElement('div');
                card.className = `channel-card ${channel.id === currentPlayingChannel?.id ? 'active' : ''}`;
                card.innerHTML = `
                    <i class="fas fa-star fav-icon ${channel.isFavorite ? 'active' : ''}" 
                       onclick="toggleFavorite(event, '${channel.id}', 'live')"></i>
                    <img src="${channel.logo}" 
                         onerror="this.src='https://cdn-icons-png.flaticon.com/512/2718/2718224.png'"
                         loading="lazy"
                         alt="${channel.name}">
                    <h4>${channel.name}</h4>
                    <span class="quality-badge">${channel.quality}</span>
                `;
                
                card.addEventListener('click', (e) => {
                    if (!e.target.classList.contains('fav-icon')) {
                        playChannel(channel);
                    }
                });
                
                grid.appendChild(card);
            });
        }

        function playChannel(channel) {
            currentPlayingChannel = channel;
            currentPlayingVOD = null;
            currentPlayingTMDB = null;
            currentPlayingYouTube = null;
            
            document.getElementById('channelTitle').textContent = channel.name;
            document.getElementById('contentTypeBadge').innerHTML = '<i class="fas fa-circle"></i> البث المباشر';
            document.getElementById('channelQuality').style.display = 'block';
            document.getElementById('qualityValue').textContent = channel.quality;
            
            updateCurrentFavoriteButton();
            
            document.querySelectorAll('.channel-card').forEach(card => {
                card.classList.remove('active');
            });
            
            const currentCard = document.querySelector(`.fav-icon[onclick*="${channel.id}"]`)?.closest('.channel-card');
            if (currentCard) {
                currentCard.classList.add('active');
            }
            
            window.scrollTo({ top: 0, behavior: 'smooth' });
            
            if (Hls.isSupported()) {
                hls.loadSource(channel.url);
                hls.attachMedia(document.getElementById('player'));
            } else if (document.getElementById('player').canPlayType('application/vnd.apple.mpegurl')) {
                document.getElementById('player').src = channel.url;
            }
            
            player.play();
            
            if (window.innerWidth <= 900) {
                closeSidebar();
            }
        }

        // --- TMDB Management ---
        async function loadTMDBContent() {
            showLoadingState('جاري تحميل المحتوى من TMDB...');
            
            try {
                let url = '';
                
                if (isSearchActive) {
                    url = `${TMDB_API_BASE}/search/${currentTMDBType}?api_key=${TMDB_API_KEY}&language=ar&page=${currentPage}&query=${encodeURIComponent(searchQuery)}`;
                } else {
                    url = `${TMDB_API_BASE}/${currentTMDBType}/${currentTMDBCategory}?api_key=${TMDB_API_KEY}&language=ar&page=${currentPage}`;
                }
                
                const response = await fetch(url);
                if (!response.ok) throw new Error('فشل تحميل من TMDB');
                
                const data = await response.json();
                totalPages = Math.min(data.total_pages, 500);
                allTMDBContent = data.results.map(item => createTMDBItem(item));
                
                renderTMDBContent();
                renderPagination();
                renderTMDBCategoryButtons();
                
                const resultCount = allTMDBContent.length;
                if (isSearchActive) {
                    showNotification(`تم العثور على ${resultCount} نتيجة`);
                }
            } catch (err) {
                console.error('Error loading TMDB:', err);
                showErrorState('حدث خطأ في تحميل المحتوى من TMDB');
                allTMDBContent = [];
                renderTMDBContent();
            }
        }

        function createTMDBItem(item) {
            const isMovie = currentTMDBType === 'movie';
            const title = isMovie ? item.title : item.name;
            const year = isMovie ? (item.release_date ? item.release_date.split('-')[0] : 'N/A') 
                               : (item.first_air_date ? item.first_air_date.split('-')[0] : 'N/A');
            
            return {
                id: item.id.toString(),
                tmdbId: item.id,
                title: title,
                description: item.overview || 'لا يوجد وصف متاح',
                year: year,
                rating: item.vote_average ? item.vote_average.toFixed(1) : 'N/A',
                poster: item.poster_path ? `${TMDB_IMAGE_BASE}${item.poster_path}` : getDefaultPoster(),
                backdrop: item.backdrop_path ? `${TMDB_IMAGE_BASE}${item.backdrop_path}` : getDefaultPoster(),
                type: currentTMDBType,
                category: currentTMDBCategory,
                isFavorite: favorites.some(f => f.id === item.id.toString() && f.type === 'tmdb')
            };
        }

        function getDefaultPoster() {
            return 'https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80';
        }

        function changeTMDBType(type) {
            currentTMDBType = type;
            currentTMDBCategory = 'popular';
            currentPage = 1;
            isSearchActive = false;
            searchQuery = '';
            
            document.querySelectorAll('.type-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            document.getElementById('sectionTitle').textContent = type === 'movie' ? 'أفلام TMDB' : 'مسلسلات TMDB';
            document.getElementById('searchInfo').style.display = 'none';
            
            loadTMDBContent();
        }

        function changeTMDBCategory(category) {
            currentTMDBCategory = category;
            currentPage = 1;
            isSearchActive = false;
            searchQuery = '';
            
            document.querySelectorAll('.tmdb-category-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            document.getElementById('searchInfo').style.display = 'none';
            loadTMDBContent();
        }

        function renderTMDBCategoryButtons() {
            const container = document.getElementById('tmdbCategoryButtons');
            container.innerHTML = '';
            
            if (currentMode === 'youtube') {
                if (isSearchActive) {
                    container.innerHTML = `
                        <button class="tmdb-category-btn active" onclick="clearSearch()">
                            <i class="fas fa-arrow-right"></i> عودة للقائمة
                        </button>
                    `;
                    return;
                }
                
                Object.keys(YOUTUBE_CATEGORIES).forEach(cat => {
                    const isActive = cat === currentYouTubeCategory;
                    container.innerHTML += `
                        <button class="tmdb-category-btn ${isActive ? 'active' : ''}" onclick="changeYouTubeCategory('${cat}')">
                            ${YOUTUBE_CATEGORIES[cat]}
                        </button>
                    `;
                });
                return;
            }
            
            if (isSearchActive) {
                container.innerHTML = `
                    <button class="tmdb-category-btn active" onclick="clearSearch()">
                        <i class="fas fa-arrow-right"></i> عودة للقائمة
                    </button>
                `;
                return;
            }
            
            const categories = TMDB_CATEGORIES[currentTMDBType];
            
            Object.keys(categories).forEach(cat => {
                const isActive = cat === currentTMDBCategory;
                container.innerHTML += `
                    <button class="tmdb-category-btn ${isActive ? 'active' : ''}" onclick="changeTMDBCategory('${cat}')">
                        ${categories[cat]}
                    </button>
                `;
            });
        }

        function renderTMDBContent() {
            const contentGrid = document.getElementById('contentGrid');
            contentGrid.innerHTML = '<div class="vod-grid" id="tmdbGrid"></div>';
            const grid = document.getElementById('tmdbGrid');
            
            if (allTMDBContent.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-search"></i>
                        <p>${isSearchActive ? 'لا توجد نتائج للبحث' : 'لا توجد عناصر'}</p>
                        ${isSearchActive ? `
                            <button class="btn btn-primary" onclick="clearSearch()" style="margin-top: 15px;">
                                عودة للقائمة
                            </button>
                        ` : ''}
                    </div>
                `;
                return;
            }
            
            allTMDBContent.forEach(item => {
                const card = document.createElement('div');
                card.className = 'vod-card';
                card.innerHTML = `
                    <div class="vod-poster-container">
                        <img src="${item.poster}" class="vod-poster" 
                             onerror="this.src='${getDefaultPoster()}'"
                             alt="${item.title}">
                        <div class="vod-play-btn">
                            <i class="fas fa-play"></i>
                        </div>
                        <span class="vod-category-badge">${isSearchActive ? 'بحث' : (TMDB_CATEGORIES[currentTMDBType][currentTMDBCategory] || 'TMDB')}</span>
                    </div>
                    <div class="vod-info">
                        <h4 class="vod-title">${item.title}</h4>
                        <div class="vod-meta">
                            <span class="vod-year">${item.year}</span>
                            <div class="vod-rating">
                                <i class="fas fa-star"></i>
                                <span>${item.rating}</span>
                            </div>
                        </div>
                    </div>
                `;
                
                card.addEventListener('click', () => {
                    showTMDBDetails(item);
                });
                
                grid.appendChild(card);
            });
        }

        function showTMDBDetails(item) {
            const modalBody = document.getElementById('vodModalBody');
            
            modalBody.innerHTML = `
                <img src="${item.backdrop}" class="vod-modal-poster" 
                     onerror="this.src='${getDefaultPoster()}'"
                     alt="${item.title}">
                <div class="vod-modal-info">
                    <h3>${item.title}</h3>
                    <div class="vod-modal-meta">
                        <span>${item.year}</span>
                        <span>${item.type === 'movie' ? 'فيلم' : 'مسلسل'}</span>
                        <span><i class="fas fa-star" style="color: #ffca28;"></i> ${item.rating}/10</span>
                    </div>
                    <p class="vod-modal-description">${item.description || 'لا يوجد وصف متاح لهذا المحتوى.'}</p>
                </div>
                <div style="display: flex; gap: 15px; margin-top: 20px;">
                    <button class="btn btn-secondary" onclick="toggleFavorite(null, '${item.id}', 'tmdb')">
                        <i class="fas fa-star"></i> ${item.isFavorite ? 'إزالة من المفضلة' : 'إضافة إلى المفضلة'}
                    </button>
                </div>
            `;
            
            document.getElementById('vodModal').style.display = 'flex';
        }

        // --- YouTube Management ---
        async function loadYouTubeContent() {
            showLoadingState('جاري تحميل فيديوهات YouTube...');
            
            try {
                let url = '';
                
                if (isSearchActive) {
                    url = `${YOUTUBE_API_BASE}/search?key=${YOUTUBE_API_KEY}&part=snippet&maxResults=20&q=${encodeURIComponent(searchQuery)}&type=video`;
                    if (youtubeNextPageToken && currentPage > 1) {
                        url += `&pageToken=${youtubeNextPageToken}`;
                    }
                } else {
                    const query = getYouTubeCategoryQuery(currentYouTubeCategory);
                    url = `${YOUTUBE_API_BASE}/search?key=${YOUTUBE_API_KEY}&part=snippet&maxResults=20&q=${encodeURIComponent(query)}&type=video&order=viewCount`;
                    if (youtubeNextPageToken && currentPage > 1) {
                        url += `&pageToken=${youtubeNextPageToken}`;
                    }
                }
                
                const response = await fetch(url);
                if (!response.ok) throw new Error('فشل تحميل من YouTube');
                
                const data = await response.json();
                youtubeNextPageToken = data.nextPageToken || null;
                youtubePrevPageToken = data.prevPageToken || null;
                totalPages = youtubeNextPageToken ? currentPage + 1 : currentPage;
                
                allYouTubeVideos = data.items.map(item => createYouTubeItem(item));
                
                renderYouTubeContent();
                renderPagination();
                renderTMDBCategoryButtons();
                
                if (isSearchActive) {
                    showNotification(`تم العثور على ${allYouTubeVideos.length} نتيجة`);
                }
            } catch (err) {
                console.error('Error loading YouTube:', err);
                showErrorState('حدث خطأ في تحميل فيديوهات YouTube');
                allYouTubeVideos = [];
                renderYouTubeContent();
            }
        }

        function getYouTubeCategoryQuery(category) {
            const queries = {
                'trending': 'trending videos',
                'music': 'music videos',
                'gaming': 'gaming videos',
                'news': 'news',
                'sports': 'sports highlights',
                'entertainment': 'entertainment',
                'education': 'educational videos',
                'tech': 'technology reviews'
            };
            return queries[category] || 'trending videos';
        }

        function createYouTubeItem(item) {
            return {
                id: item.id.videoId,
                videoId: item.id.videoId,
                title: item.snippet.title,
                description: item.snippet.description,
                thumbnail: item.snippet.thumbnails.high.url,
                channelTitle: item.snippet.channelTitle,
                publishedAt: item.snippet.publishedAt,
                type: 'youtube',
                isFavorite: favorites.some(f => f.id === item.id.videoId && f.type === 'youtube')
            };
        }

        function changeYouTubeCategory(category) {
            currentYouTubeCategory = category;
            currentPage = 1;
            isSearchActive = false;
            searchQuery = '';
            youtubeNextPageToken = null;
            youtubePrevPageToken = null;
            
            document.querySelectorAll('.tmdb-category-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            document.getElementById('sectionTitle').textContent = `YouTube - ${YOUTUBE_CATEGORIES[category]}`;
            document.getElementById('searchInfo').style.display = 'none';
            
            loadYouTubeContent();
        }

        function renderYouTubeContent() {
            const contentGrid = document.getElementById('contentGrid');
            contentGrid.innerHTML = '<div class="vod-grid" id="youtubeGrid"></div>';
            const grid = document.getElementById('youtubeGrid');
            
            if (allYouTubeVideos.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="fab fa-youtube"></i>
                        <p>${isSearchActive ? 'لا توجد نتائج للبحث' : 'لا توجد فيديوهات'}</p>
                        ${isSearchActive ? `
                            <button class="btn btn-primary" onclick="clearSearch()" style="margin-top: 15px;">
                                عودة للقائمة
                            </button>
                        ` : ''}
                    </div>
                `;
                return;
            }
            
            allYouTubeVideos.forEach(item => {
                const card = document.createElement('div');
                card.className = 'vod-card';
                card.innerHTML = `
                    <div class="vod-poster-container">
                        <img src="${item.thumbnail}" class="vod-poster" 
                             alt="${item.title}">
                        <div class="vod-play-btn" onclick="playYouTubeVideo('${item.videoId}')">
                            <i class="fab fa-youtube"></i>
                        </div>
                        <span class="vod-category-badge">YouTube</span>
                        <div class="yt-channel-info">
                            <span class="yt-channel-name">${item.channelTitle}</span>
                        </div>
                    </div>
                    <div class="vod-info">
                        <h4 class="vod-title">${item.title}</h4>
                    </div>
                `;
                
                card.addEventListener('click', (e) => {
                    if (!e.target.closest('.vod-play-btn')) {
                        showYouTubeDetails(item);
                    }
                });
                
                grid.appendChild(card);
            });
        }

        function playYouTubeVideo(videoId) {
            const item = allYouTubeVideos.find(v => v.videoId === videoId);
            if (!item) return;
            
            currentPlayingYouTube = item;
            currentPlayingChannel = null;
            currentPlayingVOD = null;
            currentPlayingTMDB = null;
            
            document.getElementById('videoWrapper').style.display = 'block';
            document.getElementById('currentInfo').style.display = 'flex';
            document.getElementById('channelTitle').textContent = item.title;
            document.getElementById('contentTypeBadge').innerHTML = '<i class="fab fa-youtube"></i> YouTube';
            document.getElementById('channelQuality').style.display = 'none';
            document.getElementById('currentChannelFavorite').style.display = 'flex';
            document.getElementById('currentChannelFavorite').classList.toggle('active', item.isFavorite);
            
            // Create YouTube iframe
            const videoWrapper = document.getElementById('videoWrapper');
            videoWrapper.innerHTML = `
                <iframe 
                    width="100%" 
                    height="100%" 
                    src="https://www.youtube.com/embed/${videoId}?autoplay=1" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                    allowfullscreen
                    style="aspect-ratio: 16/9;">
                </iframe>
            `;
            
            window.scrollTo({ top: 0, behavior: 'smooth' });
            showNotification(`جاري تشغيل: ${item.title}`);
        }

        function showYouTubeDetails(item) {
            const modalBody = document.getElementById('vodModalBody');
            
            const publishDate = new Date(item.publishedAt).toLocaleDateString('ar-EG');
            
            modalBody.innerHTML = `
                <img src="${item.thumbnail}" class="vod-modal-poster" 
                     alt="${item.title}">
                <div class="vod-modal-info">
                    <h3>${item.title}</h3>
                    <div class="vod-modal-meta">
                        <span>${item.channelTitle}</span>
                        <span>${publishDate}</span>
                    </div>
                    <p class="vod-modal-description">${item.description || 'لا يوجد وصف متاح'}</p>
                </div>
                <div style="display: flex; gap: 15px; margin-top: 20px;">
                    <button class="btn btn-primary" onclick="playYouTubeVideo('${item.videoId}'); closeModal('vodModal')">
                        <i class="fab fa-youtube"></i> مشاهدة
                    </button>
                    <button class="btn btn-secondary" onclick="toggleFavorite(null, '${item.id}', 'youtube')">
                        <i class="fas fa-star"></i> ${item.isFavorite ? 'إزالة من المفضلة' : 'إضافة إلى المفضلة'}
                    </button>
                </div>
            `;
            
            document.getElementById('vodModal').style.display = 'flex';
        }

        // --- VOD Management ---
        async function loadVODContent() {
            showLoadingState('جاري تحميل الأفلام والمسلسلات...');
            
            try {
                const response = await fetch(VOD_API_URL);
                if (!response.ok) throw new Error('فشل تحميل VOD');
                
                const data = await response.text();
                allVODs = parseVODM3U(data);
                extractVODCategories();
                renderVODCategoryButtons();
                filterVODs();
                
                showNotification('تم تحميل الأفلام والمسلسلات بنجاح');
            } catch (err) {
                console.error('Error loading VOD:', err);
                showErrorState('حدث خطأ في تحميل الأفلام والمسلسلات');
                allVODs = [];
                filterVODs();
            }
        }

        function parseVODM3U(content) {
            const lines = content.split('\n');
            const vods = [];
            let currentVOD = {};
            let groupTitle = '';

            lines.forEach(line => {
                line = line.trim();
                
                if (line.startsWith('#EXTINF:')) {
                    const logoMatch = line.match(/tvg-logo="([^"]*)"/);
                    const groupMatch = line.match(/group-title="([^"]*)"/);
                    const nameParts = line.split(',');
                    const name = nameParts[nameParts.length - 1]
                        .replace(/\|.*$/, '')
                        .trim();
                    
                    const yearMatch = name.match(/\((\d{4})\)/);
                    const year = yearMatch ? yearMatch[1] : '2023';
                    const cleanName = name.replace(/\(\d{4}\)/, '').trim();
                    groupTitle = groupMatch ? groupMatch[1] : 'أفلام';
                    
                    currentVOD = {
                        name: cleanName,
                        logo: logoMatch ? logoMatch[1] : 'https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80',
                        year: year,
                        rating: '8.0',
                        category: groupTitle,
                        type: 'vod'
                    };
                } else if (line.startsWith('http')) {
                    currentVOD.url = line;
                    currentVOD.id = btoa(line).substring(0, 32);
                    currentVOD.isFavorite = favorites.some(f => f.id === currentVOD.id);
                    vods.push({ ...currentVOD });
                    currentVOD = {};
                }
            });
            
            return vods;
        }

        function extractVODCategories() {
            vodCategories.clear();
            allVODs.forEach(vod => {
                if (vod.category) {
                    vodCategories.add(vod.category);
                }
            });
        }

        function renderVODCategoryButtons() {
            const container = document.getElementById('categoryButtons');
            container.innerHTML = '<button class="category-btn active" onclick="changeVODCategory(\'all\')">الكل</button>';
            
            const categories = Array.from(vodCategories).sort();
            
            categories.forEach(cat => {
                container.innerHTML += `
                    <button class="category-btn" onclick="changeVODCategory('${cat}')">
                        ${cat}
                    </button>
                `;
            });
        }

        function changeVODCategory(catName) {
            currentCategory = catName;
            
            const buttons = document.querySelectorAll('.category-btn');
            buttons.forEach(btn => {
                btn.classList.remove('active');
                if ((catName === 'all' && btn.textContent === 'الكل') || 
                    (catName !== 'all' && btn.textContent === catName)) {
                    btn.classList.add('active');
                }
            });
            
            filterVODs();
        }

        function filterVODs() {
            filteredVODs = [...allVODs];
            
            if (currentCategory !== 'all') {
                filteredVODs = filteredVODs.filter(vod => vod.category === currentCategory);
            }
            
            if (currentSearch) {
                filteredVODs = filteredVODs.filter(vod => 
                    vod.name.toLowerCase().includes(currentSearch)
                );
            }
            
            renderVODs();
        }

        function renderVODs() {
            const contentGrid = document.getElementById('contentGrid');
            contentGrid.innerHTML = '<div class="vod-grid" id="vodGrid"></div>';
            const grid = document.getElementById('vodGrid');
            
            if (filteredVODs.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-search"></i>
                        <p>لا توجد فيديوهات تطابق البحث</p>
                    </div>
                `;
                return;
            }
            
            filteredVODs.forEach(vod => {
                const card = document.createElement('div');
                card.className = 'vod-card';
                card.innerHTML = `
                    <div class="vod-poster-container">
                        <img src="${vod.logo}" class="vod-poster" 
                             onerror="this.src='https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80'"
                             alt="${vod.name}">
                        <div class="vod-play-btn">
                            <i class="fas fa-play"></i>
                        </div>
                        <span class="vod-category-badge">${vod.category}</span>
                    </div>
                    <div class="vod-info">
                        <h4 class="vod-title">${vod.name}</h4>
                        <div class="vod-meta">
                            <span class="vod-year">${vod.year}</span>
                            <div class="vod-rating">
                                <i class="fas fa-star"></i>
                                <span>${vod.rating}</span>
                            </div>
                        </div>
                    </div>
                `;
                
                card.addEventListener('click', () => {
                    playVOD(vod);
                });
                
                grid.appendChild(card);
            });
        }

        function playVOD(vod) {
            currentPlayingVOD = vod;
            currentPlayingChannel = null;
            currentPlayingTMDB = null;
            currentPlayingYouTube = null;
            
            // Restore video player if it was replaced with YouTube iframe
            const videoWrapper = document.getElementById('videoWrapper');
            if (!videoWrapper.querySelector('video')) {
                videoWrapper.innerHTML = `
                    <video id="player" playsinline controls>
                        <source src="" type="application/x-mpegURL" />
                    </video>
                `;
                initPlayer();
            }
            
            document.getElementById('videoWrapper').style.display = 'block';
            document.getElementById('currentInfo').style.display = 'flex';
            document.getElementById('channelTitle').textContent = vod.name;
            document.getElementById('contentTypeBadge').innerHTML = '<i class="fas fa-film"></i> فيديو عند الطلب';
            document.getElementById('channelQuality').style.display = 'none';
            document.getElementById('currentChannelFavorite').style.display = 'flex';
            document.getElementById('currentChannelFavorite').classList.toggle('active', vod.isFavorite);
            
            if (Hls.isSupported()) {
                hls.loadSource(vod.url);
                hls.attachMedia(document.getElementById('player'));
            } else if (document.getElementById('player').canPlayType('application/vnd.apple.mpegurl')) {
                document.getElementById('player').src = vod.url;
            }
            
            player.play();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // --- Search Management ---
        function performSearch() {
            const searchInput = document.getElementById('searchInput');
            const query = searchInput.value.trim();
            
            if (!query) {
                showNotification('يرجى إدخال نص للبحث');
                return;
            }
            
            searchQuery = query;
            isSearchActive = true;
            currentPage = 1;
            youtubeNextPageToken = null;
            youtubePrevPageToken = null;
            
            document.getElementById('sectionTitle').textContent = `نتائج البحث عن: "${query}"`;
            document.getElementById('searchInfo').style.display = 'flex';
            document.getElementById('searchQueryText').textContent = `نتائج البحث عن: "${query}"`;
            
            if (currentMode === 'tmdb') {
                loadTMDBContent();
            } else if (currentMode === 'youtube') {
                loadYouTubeContent();
            }
        }

        function clearSearch() {
            isSearchActive = false;
            searchQuery = '';
            currentPage = 1;
            youtubeNextPageToken = null;
            youtubePrevPageToken = null;
            
            document.getElementById('searchInput').value = '';
            document.getElementById('searchClear').style.display = 'none';
            document.getElementById('searchInfo').style.display = 'none';
            
            if (currentMode === 'tmdb') {
                document.getElementById('sectionTitle').textContent = currentTMDBType === 'movie' ? 'أفلام TMDB' : 'مسلسلات TMDB';
                currentTMDBCategory = 'popular';
                loadTMDBContent();
            } else if (currentMode === 'youtube') {
                document.getElementById('sectionTitle').textContent = `YouTube - ${YOUTUBE_CATEGORIES[currentYouTubeCategory]}`;
                loadYouTubeContent();
            }
        }

        // --- Favorites Management ---
        function toggleFavorite(event, itemId, type) {
            if (event) event.stopPropagation();
            
            let item;
            if (type === 'live') {
                item = allChannels.find(ch => ch.id === itemId);
            } else if (type === 'vod') {
                item = allVODs.find(vod => vod.id === itemId);
            } else if (type === 'tmdb') {
                item = allTMDBContent.find(tmdb => tmdb.id === itemId);
            } else if (type === 'youtube') {
                item = allYouTubeVideos.find(yt => yt.id === itemId);
            }
            
            if (!item) return;
            
            const index = favorites.findIndex(f => f.id === itemId);
            
            if (index === -1) {
                favorites.push({
                    id: item.id,
                    name: item.name || item.title,
                    logo: item.logo || item.poster || item.thumbnail,
                    url: item.url || '#',
                    type: type,
                    category: item.category || type,
                    addedAt: Date.now()
                });
                item.isFavorite = true;
                showNotification('تمت إضافة إلى المفضلة');
            } else {
                favorites.splice(index, 1);
                item.isFavorite = false;
                showNotification('تمت إزالة من المفضلة');
            }
            
            if (event) {
                const icon = event.target;
                icon.classList.toggle('active', item.isFavorite);
            }
            
            if ((currentPlayingChannel && currentPlayingChannel.id === itemId) ||
                (currentPlayingVOD && currentPlayingVOD.id === itemId) ||
                (currentPlayingTMDB && currentPlayingTMDB.id === itemId) ||
                (currentPlayingYouTube && currentPlayingYouTube.id === itemId)) {
                updateCurrentFavoriteButton();
            }
            
            localStorage.setItem('prolivetv_favorites', JSON.stringify(favorites));
            
            // If in modal, update modal content
            if (document.getElementById('vodModal').style.display === 'flex') {
                if (type === 'tmdb') {
                    showTMDBDetails(item);
                } else if (type === 'youtube') {
                    showYouTubeDetails(item);
                }
            }
        }

        function toggleCurrentFavorite() {
            const item = currentPlayingChannel || currentPlayingVOD || currentPlayingTMDB || currentPlayingYouTube;
            if (!item) return;
            
            const type = currentPlayingChannel ? 'live' : 
                        (currentPlayingVOD ? 'vod' : 
                        (currentPlayingTMDB ? 'tmdb' : 'youtube'));
            const favBtn = document.getElementById('currentChannelFavorite');
            const icon = favBtn.querySelector('i');
            
            const index = favorites.findIndex(f => f.id === item.id);
            
            if (index === -1) {
                favorites.push({
                    id: item.id,
                    name: item.name || item.title,
                    logo: item.logo || item.poster || item.thumbnail,
                    url: item.url || '#',
                    type: type,
                    category: item.category || type,
                    addedAt: Date.now()
                });
                favBtn.classList.add('active');
                icon.className = 'fas fa-star';
                item.isFavorite = true;
                showNotification('تمت الإضافة إلى المفضلة');
            } else {
                favorites.splice(index, 1);
                favBtn.classList.remove('active');
                icon.className = 'far fa-star';
                item.isFavorite = false;
                showNotification('تمت الإزالة من المفضلة');
            }
            
            localStorage.setItem('prolivetv_favorites', JSON.stringify(favorites));
            
            const favIcon = document.querySelector(`.fav-icon[onclick*="${item.id}"]`);
            if (favIcon) {
                favIcon.classList.toggle('active', item.isFavorite);
            }
        }

        function updateCurrentFavoriteButton() {
            const item = currentPlayingChannel || currentPlayingVOD || currentPlayingTMDB || currentPlayingYouTube;
            if (!item) return;
            
            const isFavorite = favorites.some(f => f.id === item.id);
            const favBtn = document.getElementById('currentChannelFavorite');
            const icon = favBtn.querySelector('i');
            
            favBtn.style.display = 'flex';
            favBtn.classList.toggle('active', isFavorite);
            icon.className = isFavorite ? 'fas fa-star' : 'far fa-star';
        }

        function showFavorites() {
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            event.target.classList.add('active');
            
            document.getElementById('categoryButtons').innerHTML = '';
            document.getElementById('typeButtons').style.display = 'none';
            document.getElementById('tmdbCategoryButtons').style.display = 'none';
            document.getElementById('pagination').style.display = 'none';
            document.getElementById('searchInfo').style.display = 'none';
            document.getElementById('searchBtn').style.display = 'none';
            
            document.getElementById('sectionTitle').textContent = 'المفضلة';
            
            document.getElementById('searchInput').value = '';
            currentSearch = '';
            document.getElementById('searchClear').style.display = 'none';
            
            if (favorites.length === 0) {
                const contentGrid = document.getElementById('contentGrid');
                contentGrid.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-star"></i>
                        <p>لا توجد عناصر في المفضلة</p>
                        <p style="font-size: 14px; margin-top: 10px;">قم بإضافة بعض القنوات أو الفيديوهات إلى المفضلة</p>
                    </div>
                `;
                return;
            }
            
            const liveFavorites = favorites.filter(f => f.type === 'live');
            const vodFavorites = favorites.filter(f => f.type === 'vod');
            const tmdbFavorites = favorites.filter(f => f.type === 'tmdb');
            const youtubeFavorites = favorites.filter(f => f.type === 'youtube');
            
            const contentGrid = document.getElementById('contentGrid');
            contentGrid.innerHTML = '';
            
            if (liveFavorites.length > 0) {
                contentGrid.innerHTML += `
                    <div style="margin-bottom: 30px;">
                        <h3 style="color: var(--text-main); margin-bottom: 15px;">
                            <i class="fas fa-tv"></i> القنوات المفضلة (${liveFavorites.length})
                        </h3>
                        <div class="channel-grid" id="favoritesLiveGrid"></div>
                    </div>
                `;
                
                const liveGrid = document.getElementById('favoritesLiveGrid');
                liveFavorites.forEach(fav => {
                    const card = document.createElement('div');
                    card.className = 'channel-card';
                    card.innerHTML = `
                        <i class="fas fa-star fav-icon active" 
                           onclick="removeFavorite(event, '${fav.id}')"></i>
                        <img src="${fav.logo}" 
                             onerror="this.src='https://cdn-icons-png.flaticon.com/512/2718/2718224.png'"
                             loading="lazy"
                             alt="${fav.name}">
                        <h4>${fav.name}</h4>
                    `;
                    
                    card.addEventListener('click', () => {
                        const channel = allChannels.find(ch => ch.id === fav.id);
                        if (channel) {
                            playChannel(channel);
                        }
                    });
                    
                    liveGrid.appendChild(card);
                });
            }
            
            if (vodFavorites.length > 0) {
                contentGrid.innerHTML += `
                    <div style="margin-bottom: 30px;">
                        <h3 style="color: var(--text-main); margin-bottom: 15px;">
                            <i class="fas fa-video"></i> فيديوهات VOD المفضلة (${vodFavorites.length})
                        </h3>
                        <div class="vod-grid" id="favoritesVODGrid"></div>
                    </div>
                `;
                
                const vodGrid = document.getElementById('favoritesVODGrid');
                vodFavorites.forEach(fav => {
                    const card = document.createElement('div');
                    card.className = 'vod-card';
                    card.innerHTML = `
                        <div class="vod-poster-container">
                            <img src="${fav.logo}" class="vod-poster" 
                                 alt="${fav.name}">
                            <div class="vod-play-btn">
                                <i class="fas fa-play"></i>
                            </div>
                            <span class="vod-category-badge">${fav.category || 'مفضل'}</span>
                        </div>
                        <div class="vod-info">
                            <h4 class="vod-title">${fav.name}</h4>
                        </div>
                    `;
                    
                    card.addEventListener('click', () => {
                        const vod = allVODs.find(v => v.id === fav.id);
                        if (vod) {
                            playVOD(vod);
                        }
                    });
                    
                    vodGrid.appendChild(card);
                });
            }
            
            if (tmdbFavorites.length > 0) {
                contentGrid.innerHTML += `
                    <div style="margin-bottom: 30px;">
                        <h3 style="color: var(--text-main); margin-bottom: 15px;">
                            <i class="fas fa-film"></i> محتوى TMDB المفضل (${tmdbFavorites.length})
                        </h3>
                        <div class="vod-grid" id="favoritesTMDBGrid"></div>
                    </div>
                `;
                
                const tmdbGrid = document.getElementById('favoritesTMDBGrid');
                tmdbFavorites.forEach(fav => {
                    const card = document.createElement('div');
                    card.className = 'vod-card';
                    card.innerHTML = `
                        <div class="vod-poster-container">
                            <img src="${fav.logo}" class="vod-poster" 
                                 alt="${fav.name}">
                            <div class="vod-play-btn">
                                <i class="fas fa-play"></i>
                            </div>
                            <span class="vod-category-badge">TMDB</span>
                        </div>
                        <div class="vod-info">
                            <h4 class="vod-title">${fav.name}</h4>
                        </div>
                    `;
                    
                    card.addEventListener('click', () => {
                        const tmdbItem = allTMDBContent.find(t => t.id === fav.id);
                        if (tmdbItem) {
                            showTMDBDetails(tmdbItem);
                        }
                    });
                    
                    tmdbGrid.appendChild(card);
                });
            }
            
            if (youtubeFavorites.length > 0) {
                contentGrid.innerHTML += `
                    <div>
                        <h3 style="color: var(--text-main); margin-bottom: 15px;">
                            <i class="fab fa-youtube"></i> فيديوهات YouTube المفضلة (${youtubeFavorites.length})
                        </h3>
                        <div class="vod-grid" id="favoritesYouTubeGrid"></div>
                    </div>
                `;
                
                const youtubeGrid = document.getElementById('favoritesYouTubeGrid');
                youtubeFavorites.forEach(fav => {
                    const card = document.createElement('div');
                    card.className = 'vod-card';
                    card.innerHTML = `
                        <div class="vod-poster-container">
                            <img src="${fav.logo}" class="vod-poster" 
                                 alt="${fav.name}">
                            <div class="vod-play-btn">
                                <i class="fab fa-youtube"></i>
                            </div>
                            <span class="vod-category-badge">YouTube</span>
                        </div>
                        <div class="vod-info">
                            <h4 class="vod-title">${fav.name}</h4>
                        </div>
                    `;
                    
                    card.addEventListener('click', () => {
                        playYouTubeVideo(fav.id);
                    });
                    
                    youtubeGrid.appendChild(card);
                });
            }
            
            if (window.innerWidth <= 900) {
                closeSidebar();
            }
        }

        function removeFavorite(event, itemId) {
            event.stopPropagation();
            
            const index = favorites.findIndex(f => f.id === itemId);
            if (index !== -1) {
                favorites.splice(index, 1);
                localStorage.setItem('prolivetv_favorites', JSON.stringify(favorites));
                showNotification('تمت الإزالة من المفضلة');
                
                const liveItem = allChannels.find(ch => ch.id === itemId);
                if (liveItem) liveItem.isFavorite = false;
                
                const vodItem = allVODs.find(vod => vod.id === itemId);
                if (vodItem) vodItem.isFavorite = false;
                
                const tmdbItem = allTMDBContent.find(tmdb => tmdb.id === itemId);
                if (tmdbItem) tmdbItem.isFavorite = false;
                
                const youtubeItem = allYouTubeVideos.find(yt => yt.id === itemId);
                if (youtubeItem) youtubeItem.isFavorite = false;
                
                showFavorites();
            }
        }

        // --- Pagination ---
        function renderPagination() {
            const pagination = document.getElementById('pagination');
            
            if (currentMode === 'youtube' && !youtubeNextPageToken && currentPage === 1) {
                pagination.style.display = 'none';
                return;
            }
            
            if (currentMode !== 'youtube' && totalPages <= 1) {
                pagination.style.display = 'none';
                return;
            }
            
            pagination.style.display = 'flex';
            
            let html = '';
            
            if (currentMode === 'youtube') {
                html += `<button class="page-btn" ${currentPage === 1 ? 'disabled' : ''} onclick="changeYouTubePage('prev')">
                            <i class="fas fa-chevron-right"></i> السابق
                         </button>`;
                
                html += `<span class="page-btn active">صفحة ${currentPage}</span>`;
                
                html += `<button class="page-btn" ${!youtubeNextPageToken ? 'disabled' : ''} onclick="changeYouTubePage('next')">
                            التالي <i class="fas fa-chevron-left"></i>
                         </button>`;
            } else {
                html += `<button class="page-btn" ${currentPage === 1 ? 'disabled' : ''} onclick="changePage(${currentPage - 1})">
                            <i class="fas fa-chevron-right"></i>
                         </button>`;
                
                const startPage = Math.max(1, currentPage - 2);
                const endPage = Math.min(totalPages, startPage + 4);
                
                for (let i = startPage; i <= endPage; i++) {
                    html += `<button class="page-btn ${i === currentPage ? 'active' : ''}" onclick="changePage(${i})">${i}</button>`;
                }
                
                html += `<button class="page-btn" ${currentPage === totalPages ? 'disabled' : ''} onclick="changePage(${currentPage + 1})">
                            <i class="fas fa-chevron-left"></i>
                         </button>`;
            }
            
            pagination.innerHTML = html;
        }

        function changePage(page) {
            if (page < 1 || page > totalPages || page === currentPage) return;
            
            currentPage = page;
            
            if (currentMode === 'tmdb') {
                loadTMDBContent();
            }
            
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function changeYouTubePage(direction) {
            if (direction === 'next' && youtubeNextPageToken) {
                currentPage++;
                loadYouTubeContent();
            } else if (direction === 'prev' && currentPage > 1) {
                currentPage--;
                youtubeNextPageToken = youtubePrevPageToken;
                loadYouTubeContent();
            }
            
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // --- Helper Functions ---
        function showLoadingState(message = 'جاري التحميل...') {
            const contentGrid = document.getElementById('contentGrid');
            contentGrid.innerHTML = `
                <div class="${currentMode === 'live' ? 'channel-grid' : 'vod-grid'}" id="grid">
                    <div class="loading-state">
                        <i class="fas fa-spinner fa-spin"></i>
                        <p>${message}</p>
                    </div>
                </div>
            `;
        }

        function showErrorState(message) {
            const contentGrid = document.getElementById('contentGrid');
            contentGrid.innerHTML = `
                <div class="empty-state">
                    <i class="fas fa-exclamation-triangle"></i>
                    <p>${message}</p>
                    <button class="btn btn-primary" onclick="retryLoading()" style="margin-top: 15px;">
                        إعادة المحاولة
                    </button>
                </div>
            `;
        }

        function retryLoading() {
            if (currentMode === 'live') {
                loadCategory(currentCategory);
            } else if (currentMode === 'vod') {
                loadVODContent();
            } else if (currentMode === 'tmdb') {
                loadTMDBContent();
            } else if (currentMode === 'youtube') {
                loadYouTubeContent();
            }
        }

        // --- Modal Functions ---
        function openUploadModal() {
            document.getElementById('uploadModal').style.display = 'flex';
            if (window.innerWidth <= 900) {
                closeSidebar();
            }
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        function closeModalOnOverlay(event, modalId) {
            if (event.target.classList.contains('modal-overlay')) {
                closeModal(modalId);
            }
        }

        async function loadCustomPlaylist() {
            const url = document.getElementById('m3uUrl').value.trim();
            if (!url) {
                showNotification('يرجى إدخال رابط صالح');
                return;
            }
            
            try {
                const response = await fetch(url);
                if (!response.ok) throw new Error('الرابط غير صالح');
                
                const data = await response.text();
                
                if (url.includes('VOD') || data.toLowerCase().includes('movie') || data.toLowerCase().includes('series')) {
                    allVODs = parseVODM3U(data);
                    extractVODCategories();
                    switchMode('vod');
                    showNotification('تم تحميل قائمة VOD بنجاح');
                } else {
                    allChannels = parseM3U(data, 'custom');
                    switchMode('live');
                    showNotification('تم تحميل القنوات بنجاح');
                }
                
                closeModal('uploadModal');
            } catch (e) {
                showNotification('الرابط غير صالح أو لا يعمل');
                console.error(e);
            }
        }

        // --- Notification System ---
        function showNotification(message) {
            const existingNotification = document.querySelector('.notification');
            if (existingNotification) {
                existingNotification.remove();
            }
            
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.style.cssText = `
                position: fixed;
                bottom: 30px;
                left: 30px;
                background: var(--bg-card);
                color: var(--text-main);
                padding: 15px 25px;
                border-radius: 12px;
                z-index: 10000;
                animation: fadeIn 0.3s ease;
                box-shadow: 0 8px 30px rgba(0,0,0,0.2);
                border: 1px solid var(--border-color);
                display: flex;
                align-items: center;
                gap: 12px;
                max-width: 400px;
                backdrop-filter: blur(10px);
            `;
            
            notification.innerHTML = `
                <i class="fas fa-check-circle" style="color: #10b981; font-size: 18px;"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transition = 'opacity 0.3s ease';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }
    </script>
</body>
</html>
